<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#7E3FF2"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_diet_plan"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="20dp" />

    <RadioGroup
        android:id="@+id/dietRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioLowCarb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_carb"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioHighProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/high_protein"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioBalanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balanced"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#7E3FF2" />
</LinearLayout>
